<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="1"
                  android:layout_gravity="center_horizontal">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="100dp"
                   android:id="@+id/IDImage"
                   android:layout_weight="0.2"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_weight="0.4">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Title"
                      android:id="@+id/IDTitleView"
                      android:layout_marginTop="10dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Year"
                      android:id="@+id/IDYearView" android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>